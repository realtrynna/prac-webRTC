{
    "compilerOptions": {
        "target": "es2016",                                  
        "experimentalDecorators": true,                   
        "emitDecoratorMetadata": true,                   
        "module": "commonjs",                                
        "outDir": "dist",                                   
        "esModuleInterop": true,                             
        "forceConsistentCasingInFileNames": true,            
        "strict": true,                                      
        "skipLibCheck": true,                                 
        "typeRoots": ["./node_modules/@types", "./node_modules/.prisma", "./src/@types"]
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "dist"
    ]
}